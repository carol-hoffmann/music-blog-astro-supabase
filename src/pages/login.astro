---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Login | Music Blog">
  <section class="form-page">
    <h1>Login</h1>
    <p class="meta">Access your account to create and manage posts.</p>

   <form id="loginForm" class="form-card">
      <label>
        Email
        <input type="email" name="email" required />
      </label>

      <label>
        Password
        <input type="password" name="password" required />
      </label>

      <button class="btn" type="submit">Login</button>

      <p id="msg" class="meta" style="margin-top:12px;"></p>

      <p class="meta" style="margin-top:12px;">
        Don't have an account? <a href="/register">Register</a>
      </p>
    </form>
  </section>

  <script is:inline>
    window.PUBLIC_SUPABASE_URL = "{import.meta.env.PUBLIC_SUPABASE_URL}";
    window.PUBLIC_SUPABASE_ANON_KEY = "{import.meta.env.PUBLIC_SUPABASE_ANON_KEY}";
  </script>

  <script type="module">
    import { supabase } from "../lib/supabaseClient";


    console.log("✅ login script loaded");

    const form = document.querySelector("#loginForm");
    const msg = document.querySelector("#msg");

    function setMsg(text) {
      if (msg) msg.textContent = text;
    }

    form?.addEventListener("submit", async (e) => {
      e.preventDefault();
      setMsg("Logging in...");

      const formData = new FormData(form);
      const email = String(formData.get("email") || "");
      const password = String(formData.get("password") || "");

      const { error } = await supabase.auth.signInWithPassword({ email, password });

      if (error) {
        console.error("❌ login error:", error);
        setMsg("Error: " + error.message);
        return;
      }

      setMsg("Success! Redirecting...");
      window.location.href = "/account";
    });
  </script>
</BaseLayout>
